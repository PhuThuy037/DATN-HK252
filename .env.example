# =========================
# APP
# =========================
APP_NAME=datn-phase2-rag
APP_ENV=development
DEBUG=true
# =========================
# AUTH / JWT
# =========================
SECRET_KEY=change-me-now
JWT_SECRET_KEY=change-me-now
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
# =========================
# Timezone
# =========================
TZ=Asia/Ho_Chi_Minh

# ASGI app path
ASGI_APP=app.main:app

# =========================
# PORTS (host ports)
# =========================
API_PORT=8000
DB_PORT=5433
REDIS_PORT=6379
PGADMIN_PORT=5050

# =========================
# POSTGRES
# =========================
POSTGRES_USER=app
POSTGRES_PASSWORD=app123
POSTGRES_DB=datn_phase2

# IMPORTANT: host is "db" because API is in Docker network
DATABASE_URL=postgresql+psycopg://app:app123@db:5432/datn_phase2

# =========================
# REDIS
# =========================
REDIS_URL=redis://redis:6379/0

# =========================
# GUNICORN (prod/demo)
# =========================
WORKERS=2
TIMEOUT=60

# =========================
# PGADMIN
# =========================
PGADMIN_DEFAULT_EMAIL=admin@local.com
PGADMIN_DEFAULT_PASSWORD=admin123

# =========================
# OLLAMA (nếu chạy ngoài docker)
# =========================
OLLAMA_BASE_URL=http://host.docker.internal:11434
